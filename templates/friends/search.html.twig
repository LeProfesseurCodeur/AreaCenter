{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="container">
        <br/>
            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-8">
                    <form method="post" action= "{{ path('search_friends') }}" class="card card-sm">
                        <div class="card-body row no-gutters align-items-center">
                            <div class="col-auto">
                            </div>
                            <div class="col">
                                <input name="_search" class="form-control form-control-lg form-control-borderless" type="search" placeholder="Recherchez vos amis">
                            </div>
                            <div class="col-auto">
                                <button class="btn btn-lg btn-primary" type="submit">Rechercher</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    {% if friends[0].name is defined  %}
        <table class="table table-dark" id="center" style="width: 15%;">
            <thead>
            <tr>
                <th scope="col">Resultats de votre recherche</th>
            </tr>
            </thead>
            <tbody>
            {% for friend in friends %}
                <tr>
                    <form method="post" action= "{{ path('add_friends') }}">
                        <th scope="row">{{ friend.name }}
                            <input type="hidden" name="friendname" value="{{ friend.name }}">
                            <button type="submit" name="button" class="btn btn-success">Ajouter</button>
                        </th>
                    </form>
                </tr>

            </tbody>
            {% endfor %}
        </table>
    {% endif %}
{% endblock %}