{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
    <div class="row">

        <div class="col-md-12">
            <h4>Administration d'utilisateurs</h4>
            <div class="table-responsive">
                <table id="mytable" class="table table-bordred table-striped">
                    <thead>
                    <th><input type="checkbox" id="checkall" /></th>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Derniere connexion</th>
                    <th>Creation du compte</th>


                    <th>Edit</th>
                    <th>Delete</th>
                    </thead>
                    <tbody>
                    {% for user in users %}
                    <tr>
                        <td><input type="checkbox" class="checkthis" /></td>
                        <td>{{ user.id }}</td>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.roles[0]}}</td>
                        <td>{{ user.lastlogin|date("d/m/Y") }}</td>
                        <td>{{ user.createdat|date("d/m/Y") }}</td>

                        <form action="{{ path('administration_users_edit', {id : user.id}) }} "><td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" >Edit</button></p></td></form>
                        <form action="{{ path('administration_users_delete',{id : user.id}) }}"><td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer cet utilisateur ')" >Delete</button></p></td></form>
                    </tr>
                    {% endfor %}
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}